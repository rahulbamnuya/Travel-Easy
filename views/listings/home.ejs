      <style>
            /* Modal Styles */
            .modal {
                  display: none;
                  /* Hidden by default */
                  position: fixed;
                  /* Stay in place */
                  z-index: 1;
                  /* Sit on top */
                  left: 0;
                  top: 0;
                  width: 100%;
                  /* Full width */
                  height: 100%;
                  /* Full height */
                  overflow: auto;
                  /* Enable scroll if needed */
                  background-color: rgba(0, 0, 0, 0.4);
                  /* Black with opacity */
            }

            .modal-content {
                  background-color: #fefefe;
                  margin: 15% auto;
                  padding: 20px;
                  border: 1px solid #888;
                  width: 80%;
                  max-width: 600px;
            }

            .close-button {
                  color: #aaa;
                  float: right;
                  font-size: 28px;
                  font-weight: bold;
            }

            .close-button:hover,
            .close-button:focus {
                  color: black;
                  text-decoration: none;
                  cursor: pointer;
            }
      </style>
</head>

